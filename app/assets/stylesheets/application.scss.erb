@import 'sign';
@import 'tiles';

// Custom bootstrap variables must be set or imported *before* bootstrap.
@import "bootstrap";

@font-face {
 font-family: 'Orbitron';
 src:font-url('Orbitron-Regular.ttf') format('truetype');
 font-weight: normal;
 font-style: normal;
}

/*==========  Mobile First Method  ==========*/


/* Custom, iPhone Retina */
@media only screen and (min-device-width: 320px) and (min-width : 320px) {
  body {
    background-color: #50fcaf;
    text-align: center;
    font-family: Verdana
  }

  h1 {
    font-style: oblique 20deg;
  }

  section {
    text-align: left;
    margin-left: auto;
    margin-right: auto;
  }

  nav {
    margin-bottom: 1em;
    border-radius: 0.25rem;
  }

  logo {
    font-family: 'Orbitron';
    font-size: 10vw;
    margin-top: 7vh;
  }

  .navbar-brand {
    font-family: 'Orbitron';
    font-size: 1em
  }

  section.footer {
    height: 5em;
  }

  article {
    text-align: left;
    border: 2px dotted black;
    padding: 1em;
    margin: 1em;
  }
}

/* Extra Small Devices, Phones */
@media only screen and (min-device-width: 480px) and (min-width : 480px) {
  .navbar-brand {
    font-size: inherit;
  }
}

/* Small Devices, Tablets */
@media only screen and (min-width : 768px) {

}

/* Medium Devices, Desktops */
@media only screen and (min-width : 992px) {
  form {
    width: 50%;
  }
}

/* Large Devices, Wide Screens */
@media only screen and (min-width : 1200px) {

}
