- content_for :title, @issue.name
%h1= yield :title
- if @positions.present?
  %p
    %strong Registered Positions
  .tile-container
    - @positions.each do |position|
      = link_to profile_issue_position_path(@issue, position), class: 'tile' do
        = position.name
- else
  %p This issue does not have any positions declared
%p
  %strong Actions
%hr
.tile-container
  = link_to new_profile_issue_position_path(@issue), class: 'tile' do
    = 'Add Position'
  = link_to issue_path(@issue), class: 'tile' do
    = 'Go to Public Issue'
  = render partial: 'layouts/authentication_tiles'
