%h1= @group.name
%p= link_to 'Edit', edit_group_path(@group)
%h2 Members
- @memberships.each do |membership|
  %p= membership.profile.name
- if @invitations.present?
  %h2 Invited Members
  - @invitations.each do |invitation|
    %p= invitation.profile.name
%p= link_to 'Invite New Member', new_group_invitation_path(@group)
%p= link_to 'Back to All Groups', groups_path
