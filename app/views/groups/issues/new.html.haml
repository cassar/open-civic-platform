- content_for :title, "New Issue for #{@group.name} Group"
%h1= yield :title
%section
  = form_for [@group, @issue] do |f|
    .form-group
      = f.label :name
      = f.text_field :name, class: 'form-control'
    .actions.form-group
      = f.submit nil, class: 'btn btn-primary'
  = link_to 'Back to Group', group_path(@group)
