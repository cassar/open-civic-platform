- content_for :title, @issue.name
%h1= yield :title
- if @links.any? || user_signed_in?
  %p
    %strong Context
  .tile-container
    - @links.each do |link|
      = render 'layouts/tile', url: link.url, title: link.title
    - if user_signed_in?
      = link_to new_issue_link_path(@issue), class: 'tile' do
        = 'Add Link'
%p
  %strong Positions
.tile-container
  - @positions.each do |position|
    = render 'layouts/tile', url: issue_position_path(@issue, position), title: position.name
  - if @adoption.present?
    = link_to new_profile_issue_position_path(@issue), class: 'tile' do
      = 'Add Position'
%p
  %strong Actions
%hr
.tile-container
  - if @adoption.present?
    = link_to edit_profile_issue_path(@issue), class: 'tile' do
      = 'Edit Issue'
    = link_to profile_issue_path(@issue), class: 'tile' do
      = 'Preferences'
  - else
    = link_to profile_issues_path(issue: {name: @issue.name}), method: :post, class: 'tile' do
      = 'Adopt Issue'
  = render partial: 'layouts/authentication_tiles'
