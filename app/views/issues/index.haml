- content_for :title, 'Home'
%landing
  %logo Open Civic Platform
.container
  %p
    %strong Issues Being Discussed
  - if @issues.present?
    .tile-container
      - @issues.each do |issue|
        = link_to issue_path(issue), class: 'tile' do
          = issue.name
  - else
    %p There are no issues currently being discussed
  %p
    %strong Actions
  %hr
  .tile-container
    - if user_signed_in?
      = link_to profile_path, class: 'tile' do
        = 'Profile'
      = link_to account_path, class: 'tile' do
        = 'Email/Password'
      = link_to destroy_user_session_path, method: :delete, class: 'tile' do
        = 'Sign Out'
    - else
      = link_to sign_in_path, class: 'tile' do
        = 'Sign In'
      = link_to sign_up_path, class: 'tile' do
        = 'Sign Up'
